<Window x:Class="MachineLearning.WindowGraphic2D"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MachineLearning"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="2 Dimensions" Height="800" Width="1000" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <Button Name="btnStart" Content="Run" Padding="20, 15" VerticalAlignment="Center"  Margin="20" Click="btnRun_Click"/>
            <Button Name="btnClear" Content="Clear" Padding="20, 15" VerticalAlignment="Center" Margin="20" Click="btnClear_Click"/>
            <GroupBox Header="Num Centroidi">
                <StackPanel Orientation="Horizontal">
                    <Slider Name="sldNumCentroids" Minimum="1" Maximum="10" IsSnapToTickEnabled="True" />
                    <TextBox Text="{Binding ElementName=sldNumCentroids, Path=Value}"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*" />
                <ColumnDefinition Width="60*" />
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DataGrid Name="dtgCentroids" AutoGenerateColumns="False" SelectionMode="Single" Grid.Row="0" ItemsSource="{Binding Centroids}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="X" Binding="{Binding Dimensions[0]}" Width="*" />
                        <DataGridTextColumn Header="Y" Binding="{Binding Dimensions[1]}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid Name="dtgPoints" AutoGenerateColumns="False" SelectionMode="Single" Grid.Row="1" ItemsSource="{Binding ElementName=dtgCentroids, Path=SelectedItem.Points}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="X" Binding="{Binding Dimensions[0]}" Width="*" />
                        <DataGridTextColumn Header="Y" Binding="{Binding Dimensions[1]}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Border BorderThickness="1" BorderBrush="Black" Margin="15" Grid.Column="1" Grid.Row="1">
                <Canvas Name="cnvDrawArea" MouseLeftButtonDown="cnvDrawArea_MouseDown" Background="White" />
            </Border>
        </Grid>
    </Grid>
</Window>
